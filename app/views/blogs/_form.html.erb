<div class="container">
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3">
      <h1><%= form_title %></h1>

      <div>
        <ul id="error_frame">
          <li class="error_msg" id="err_title">Título no puede estar en blanco</li>
          <li class="error_msg" id="err_body01">Cuerpo no puede estar en blanco</li>
          <li class="error_msg" id="err_body02">Cuerpo es demasiado corto (250 caracteres mínimo)</li>
        </ul>
      </div>

      <%= form_for @blog do |b| %>
        <div class="form-group">
          Título: <%= b.text_field :title, class: "form-control input-lg", placeholder: "Ingresa el título del Post" %>
        </div>
        <div class="form-group">
          Cuerpo: <%= b.text_area :body, rows: 10, class: "form-control input-lg", placeholder: "Ingresa el cuerpo del Post" %>
        </div>
        	<%= b.hidden_field :user_id, value: current_user.id %>
        <div>
          <%= b.submit form_title, class: "btn btn-primary btn-lg btn-block" %>
        </div>
      <% end %>
    </div>
  </div>
</div>